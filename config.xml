<?xml version='1.0' encoding='utf-8'?>
<widget id="org.purimize.app.spawrapper" version="0.1.0-proto" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
	<name>SPAWrapper</name>
	<description>Default project wrapper for cordova based single page applications</description>
    <author email="dev@mail.purimize.com" href="http://cordova.io">JCloudYu</author>
    <content src="index.html"/>



	<!-- Plugin Dependencies -->
	<plugin name="cordova-plugin-whitelist" spec=">=1"/>
	<plugin name="cordova-plugin-dialogs" spec=">=1.2.0"/>
    <plugin name="cordova-plugin-console" spec=">=1.0.2" />
	<plugin name="org.purimize.cordova.viewportfix" spec="https://github.com/JCloudYu/CordovaEnableViewportScaleSupport.git" />
	<plugin name="org.purimize.cordova.preferences" spec="https://github.com/JCloudYu/CordovaPreferences.git" />

	<!-- Some useful plugins... -->
	<!--
	<plugin name="phonegap-plugin-barcodescanner" spec="~4.1.0"/>
	<plugin name="cordova-plugin-datepicker" spec="https://github.com/JCloudYu/cordova-plugin-datepicker.git" />
	-->



	<!-- Environmental Configurations -->
	<preference name="EnableViewportScale" value="true" />
	<preference name="DisallowOverScroll" value="true" />
	<preference name="Orientation" value="portrait" />



	<!-- Origin Control -->
	<access origin="*"/>



	<!-- Basic Indent -->
	<allow-intent href="http://*/*"/>
	<allow-intent href="https://*/*"/>
	<allow-intent href="tel:*"/>
	<allow-intent href="sms:*"/>
	<allow-intent href="mailto:*"/>
	<allow-intent href="geo:*"/>



	<!-- Platform Specific Configurations -->
	<platform name="android">
		<allow-intent href="market:*"/>
		<!-- Android 4.4 => 19 | Android 4.2 => 17 | Android 4.0 => 14 -->
		<preference name="android-minSdkVersion" value="19" />
	</platform>
	<platform name="ios">
		<allow-intent href="itms:*"/>
		<allow-intent href="itms-apps:*"/>
		<preference name="target-device" value="universal" />
		<preference name="deployment-target" value="7.1" />
	</platform>
</widget>
