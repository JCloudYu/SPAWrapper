{
    "@@node":"widget",
    "id":"com.purimize.app.proto",
    "version":"1.0.0",
    "xmlns":"http://www.w3.org/ns/widgets",
    "xmlns:cdv":"http://cordova.apache.org/ns/1.0",
    "@@children":[
        { "@@node":"name",			"@@children":"SPAWrapper" },
        { "@@node":"description",	"@@children":"Default project wrapper for cordova based single page applications" },
        { "@@node":"author",		"email":"dev@mail.purimize.com", "href":"http://cordova.io", "@@children":"JCloudYu" },
        { "@@node":"content",		"src":"app.html" },
		{ "@@node":"preference",	"name":"SPAWrapperVersion", "value":"1.0.1" },



		{ "@@node":"plugin",		"name":"cordova-plugin-whitelist", "spec":">=1" },
        { "@@node":"plugin",		"name":"cordova-plugin-dialogs", "spec":">=1.2.0" },
        { "@@node":"plugin",		"name":"cordova-plugin-console", "spec":">=1.0.2" },
        { "@@node":"plugin",		"name":"cordova-plugin-device", "spec":"~1.1.1" },
        { "@@node":"plugin",		"name":"cordova-plugin-splashscreen", "spec":"~3.1.0" },
        { "@@node":"plugin",		"name":"cordova-plugin-statusbar", "spec":"~2.1.1" },
        { "@@node":"plugin",		"name":"cordova-plugin-inappbrowser", "spec":"~1.4.0" },
        { "@@node":"plugin",		"name":"org.purimize.cordova.viewportfix", "spec":"https://github.com/JCloudYu/CordovaEnableViewportScaleSupport.git" },
        { "@@node":"plugin",		"name":"org.purimize.cordova.preferences", "spec":"https://github.com/JCloudYu/CordovaPreferences.git" },
    
        { "@@node":"plugin",		"name":"cordova-plugin-datepicker", "spec":"https://github.com/JCloudYu/cordova-plugin-datepicker.git" },
        { "@@node":"plugin",		"name":"cordova-plugin-file", "spec":"~4.1.1" },
        { "@@node":"plugin",		"name":"cordova-plugin-media", "spec":"~2.1.0" },
        { "@@node":"plugin",		"name":"cordova-plugin-network-information", "spec":"~1.2.0" },



        { "@@node":"preference",	"name":"EnableViewportScale",		"value":"true" },
        { "@@node":"preference",	"name":"DisallowOverScroll",		"value":"true" },
        { "@@node":"preference",	"name":"Orientation",				"value":"portrait" },
        { "@@node":"preference",	"name":"AutoHideSplashScreen",		"value":"true" },
        { "@@node":"preference",	"name":"SplashScreenDelay",			"value":"3000" },
        { "@@node":"preference",	"name":"ShowSplashScreenSpinner",	"value":"false" },


        { "@@node":"access",			"origin":"*" },
        { "@@node":"allow-navigation",	"href":"*" },
        { "@@node":"allow-intent",		"href":"http://*/*" },
        { "@@node":"allow-intent",		"href":"https://*/*" },
        { "@@node":"allow-intent",		"href":"tel:*" },
        { "@@node":"allow-intent",		"href":"sms:*" },
        { "@@node":"allow-intent",		"href":"mailto:*" },
        { "@@node":"allow-intent",		"href":"geo:*" },


        { "@@node":"platform",		"name":"android", "@@children":[
            { "@@node":"allow-intent",		"href":"market:*" },
            { "@@node":"preference",		"name":"android-minSdkVersion", "value":"19" },


            { "@@node":"icon",      "src":"res/platform/android/icon/ldpi.png",       "density":"ldpi",    "width":"36",  "height":"36" },
            { "@@node":"icon",      "src":"res/platform/android/icon/mdpi.png",       "density":"mdpi",    "width":"48",  "height":"48" },
            { "@@node":"icon",      "src":"res/platform/android/icon/hdpi.png",       "density":"hdpi",    "width":"72",  "height":"72" },
            { "@@node":"icon",      "src":"res/platform/android/icon/xhdpi.png",      "density":"xhdpi",   "width":"96",  "height":"96" },
            { "@@node":"icon",      "src":"res/platform/android/icon/xxhdpi.png",     "density":"xxhdpi",  "width":"144", "height":"144" },
            { "@@node":"icon",      "src":"res/platform/android/icon/xxxhdpi.png",    "density":"xxxhdpi", "width":"192", "height":"192" },
            { "@@node":"splash",    "src":"res/platform/android/screen/splash-land-ldpi.png",    "density":"land-ldpi",      "width":"320",   "height":"200"  },
            { "@@node":"splash",    "src":"res/platform/android/screen/splash-land-mdpi.png",    "density":"land-mdpi",      "width":"480",   "height":"320"  },
            { "@@node":"splash",    "src":"res/platform/android/screen/splash-land-hdpi.png",    "density":"land-hdpi",      "width":"800",   "height":"480"  },
            { "@@node":"splash",    "src":"res/platform/android/screen/splash-land-xhdpi.png",   "density":"land-xhdpi",     "width":"1280",  "height":"720"  },
            { "@@node":"splash",    "src":"res/platform/android/screen/splash-land-xxhdpi.png",  "density":"land-xxhdpi",    "width":"1600",  "height":"960"  },
            { "@@node":"splash",    "src":"res/platform/android/screen/splash-land-xxxhdpi.png", "density":"land-xxxhdpi",   "width":"1920",  "height":"1280" },
            { "@@node":"splash",    "src":"res/platform/android/screen/splash-port-ldpi.png",    "density":"port-ldpi",      "width":"200",   "height":"320"  },
            { "@@node":"splash",    "src":"res/platform/android/screen/splash-port-mdpi.png",    "density":"port-mdpi",      "width":"320",   "height":"480"  },
            { "@@node":"splash",    "src":"res/platform/android/screen/splash-port-hdpi.png",    "density":"port-hdpi",      "width":"480",   "height":"800"  },
            { "@@node":"splash",    "src":"res/platform/android/screen/splash-port-xhdpi.png",   "density":"port-xhdpi",     "width":"720",   "height":"1280" },
            { "@@node":"splash",    "src":"res/platform/android/screen/splash-port-xxhdpi.png",  "density":"port-xxhdpi",    "width":"960",   "height":"1600" },
            { "@@node":"splash",    "src":"res/platform/android/screen/splash-port-xxxhdpi.png", "density":"port-xxxhdpi",   "width":"1280",  "height":"1920" },


            { "@@node":"hook", "type":"before_build", "src":"scripts/android-bundle.sh" },
            { "@@node":"hook", "type":"before_run", "src":"scripts/android-bundle.sh" }
        ]},

        { "@@node":"platform",		"name":"ios", "@@children":[
            { "@@node":"allow-intent",		"href":"itms:*" },
            { "@@node":"allow-intent",		"href":"itms-apps:*" },
            { "@@node":"preference",		"name":"target-device", "value":"handset" },
            { "@@node":"preference",		"name":"deployment-target", "value":"7.1" },


            { "@@node":"icon",      "src":"res/platform/ios/icon/icon-60@3x.png",     "width":"180",  "height":"180" },
            { "@@node":"icon",      "src":"res/platform/ios/icon/icon-60@2x.png",     "width":"120",  "height":"120" },
            { "@@node":"icon",      "src":"res/platform/ios/icon/icon-76@2x.png",     "width":"152",  "height":"152" },
            { "@@node":"icon",      "src":"res/platform/ios/icon/icon-76.png",        "width":"76",   "height":"76"  },
            { "@@node":"icon",      "src":"res/platform/ios/icon/icon-76@2x.png",     "width":"152",  "height":"152" },
            { "@@node":"icon",      "src":"res/platform/ios/icon/icon-76.png",        "width":"76",   "height":"76"  },
            { "@@node":"icon",      "src":"res/platform/ios/icon/icon-40@2x.png",     "width":"80",   "height":"80"  },
            { "@@node":"icon",      "src":"res/platform/ios/icon/icon-40.png",        "width":"40",   "height":"40"  },
            { "@@node":"icon",      "src":"res/platform/ios/icon/icon-57@2x.png",     "width":"114",  "height":"114" },
            { "@@node":"icon",      "src":"res/platform/ios/icon/icon-57.png",        "width":"57",   "height":"57"  },
            { "@@node":"icon",      "src":"res/platform/ios/icon/icon-72@2x.png",     "width":"144",  "height":"144" },
            { "@@node":"icon",      "src":"res/platform/ios/icon/icon-72.png",        "width":"72",   "height":"72"  },
            { "@@node":"icon",      "src":"res/platform/ios/icon/icon-small@3x.png",  "width":"87",   "height":"87"  },
            { "@@node":"icon",      "src":"res/platform/ios/icon/icon-small@2x.png",  "width":"58",   "height":"58"  },
            { "@@node":"icon",      "src":"res/platform/ios/icon/icon-small.png",     "width":"29",   "height":"29"  },
            { "@@node":"icon",      "src":"res/platform/ios/icon/icon-50@2x.png",     "width":"100",  "height":"100" },
            { "@@node":"icon",      "src":"res/platform/ios/icon/icon-50.png",        "width":"50",   "height":"50"  },
            { "@@node":"icon",      "src":"res/platform/ios/icon/icon-83.5@2x.png",   "width":"167",  "height":"167" },

            { "@@node":"splash",    "src":"res/platform/ios/screen/Default~iphone.png",              "width":"320",  "height":"480"  },
            { "@@node":"splash",    "src":"res/platform/ios/screen/Default@2x~iphone.png",           "width":"640",  "height":"960"  },
            { "@@node":"splash",    "src":"res/platform/ios/screen/Default-Portrait~ipad.png",       "width":"768",  "height":"1024" },
            { "@@node":"splash",    "src":"res/platform/ios/screen/Default-Portrait@2x~ipad.png",    "width":"1536", "height":"2048" },
            { "@@node":"splash",    "src":"res/platform/ios/screen/Default-Landscape~ipad.png",      "width":"1024", "height":"768"  },
            { "@@node":"splash",    "src":"res/platform/ios/screen/Default-Landscape@2x~ipad.png",   "width":"2048", "height":"1536" },
            { "@@node":"splash",    "src":"res/platform/ios/screen/Default-568h@2x~iphone.png",      "width":"640",  "height":"1136" },
            { "@@node":"splash",    "src":"res/platform/ios/screen/Default-667h.png",                "width":"750",  "height":"1334" },
            { "@@node":"splash",    "src":"res/platform/ios/screen/Default-736h.png",                "width":"1242", "height":"2208" },
            { "@@node":"splash",    "src":"res/platform/ios/screen/Default-Landscape-736h.png",      "width":"2208", "height":"1242" },


			{ "@@node":"hook", "type":"after_platform_add", "src":"scripts/ios-bundle.sh" }
        ]}
    ]
}
